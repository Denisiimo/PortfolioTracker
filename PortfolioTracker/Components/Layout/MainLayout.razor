@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <div class="container">
        <div class="d-flex w-100 justify-content-between align-items-center" id="navbarNav">
            <!-- Left-aligned items -->
            <div class="d-flex">
                <AuthorizeView>
                    <Authorized>
                        <a class="navbar-brand" style="color:white" href="/history">Transaction History</a>
                    </Authorized>
                    <NotAuthorized></NotAuthorized>
                </AuthorizeView>
            </div>

            <!-- Centered 'Portfolio Tracker' -->
            <div class="mx-auto">
                <a class="navbar-brand" style="color:white" href="/">Portfolio Tracker</a>
            </div>

            <!-- Right-aligned items (username and logout) -->
            <div class="d-flex align-items-center">
                <AuthorizeView>
                    <Authorized>
                        <!-- Username and Logout on the same line -->
                        <span class="navbar-text me-2" style="color:white"> @context.User.Identity?.Name </span>
                        <NavLink class="nav-link" href="/Account/Logout" style="color:white; border: 1px solid white; border-radius: 10px; h-2" Match="NavLinkMatch.All">Logout</NavLink>
                    </Authorized>
                    <NotAuthorized>
                        <ul class="navbar-nav">
                            <li class="nav-item me-1">
                                <NavLink class="nav-link" href="/Account/Login" style="color:white; border: 1px solid white; border-radius: 10px;" Match="NavLinkMatch.Prefix">Login</NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/Account/Register" style="color:white; border: 1px solid white; border-radius: 10px;" Match="NavLinkMatch.Prefix">Register</NavLink>
                            </li>
                        </ul>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</nav>


<main class="container">
    <div class="p-2 rounded">
        @Body
    </div>
</main>